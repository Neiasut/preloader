{
  "compilerOptions": {
    "module": "es6",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "baseUrl": ".",
    "target": "es2018",
    "allowJs": false,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/*",
    "template/*"
  ],
  "exclude": [
    //"node_modules",
    "**/*.spec.ts"
  ]
}
